@model List<UAInnovateChallenge.Models.BarPostsVM>

@{
    ViewData["Title"] = "Bar Posts";
    Layout = "~/Views/Shared/AllPostsLayout.cshtml";
}

<h1>Bar Posts</h1>
@foreach (var item in Model) {
<!-- Post Author Info
============================================= -->
<div class="card">
	<div class="card-header"><strong>Posted by <a href="#">@Html.DisplayFor(modelItem => item.Bar.Name)</a></strong></div>
	<div class="card-body">
		<div class="author-image">
			@if (item.Bar.BarPicture != null)
            {<img src="@Url.Action("GetBarPhoto", "Bars", new {item.Bar.Id})" alt="@Html.DisplayFor(modelItem => item.Bar.Name)" />}
		</div>
		@Html.DisplayFor(modelItem => item.BarPosts.Post)
        <a asp-action="Edit" asp-route-id="@item.BarPosts.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.BarPosts.Id">Delete</a>
    </div>
</div><!-- Post Single - Author End --><br />
}
<p>
    <a asp-action="Create">Create New</a>
</p>